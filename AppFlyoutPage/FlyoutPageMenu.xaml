            x:Class="AppFlyoutPage.FlyoutPageMenu"
            xmlns:pages="clr-namespace:AppFlyoutPage"
            Title="FlyoutPageMenu"
            FlyoutLayoutBehavior="Popover"> <!--Essa Ã© a propiedade que faz com que ele se recolha-->

    <FlyoutPage.Flyout>
