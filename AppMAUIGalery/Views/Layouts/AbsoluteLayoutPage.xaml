<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGalery.Views.Layouts.AbsoluteLayoutPage"
             Title="AbsoluteLayoutPage"
             BackgroundColor="White">

    <AbsoluteLayout>
        <Label Text="Ola mundo!" AbsoluteLayout.LayoutBounds="150, 0, 100, 40" BackgroundColor="Gray"/>
        <Button Text="Clique-me" AbsoluteLayout.LayoutBounds="0.5, 0.5, 200, 60" AbsoluteLayout.LayoutFlags="PositionProportional" TextColor="White" BackgroundColor="DarkBlue"/>
        
        <BoxView Color="LightBlue" AbsoluteLayout.LayoutBounds="150, 200" WidthRequest="50" HeightRequest="50" />
        <BoxView Color="Blue" AbsoluteLayout.LayoutBounds="175, 225" WidthRequest="50" HeightRequest="50" />
        <BoxView Color="Green" AbsoluteLayout.LayoutBounds="200, 250" WidthRequest="50" HeightRequest="50" />
        <BoxView Color="Yellow" AbsoluteLayout.LayoutBounds="225, 275" WidthRequest="50" HeightRequest="50" />
        <BoxView Color="Red" AbsoluteLayout.LayoutBounds="250, 300" WidthRequest="50" HeightRequest="50" />
    </AbsoluteLayout>
</ContentPage>