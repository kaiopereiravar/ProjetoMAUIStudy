<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGalery.Views.Components.List.TableViewPage"
             Title="TableViewPage">
    <VerticalStackLayout>
        <TableView 
            Intent="Settings" 
            RowHeight="30"
            HasUnevenRows="True">
            
            <TableRoot>
                <TableSection Title="Segurança">
                    <EntryCell Label="Proteger o app com senha"/>
                </TableSection>

                <TableSection Title="Backup">
                    <SwitchCell Text="Habilitar backup"/>
                    <SwitchCell Text="Backup diário"/>
                    <SwitchCell Text="Backup semanal"/>
                    <SwitchCell Text="Backup mensal"/>

                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>